    <% projects.forEach((project, index) => { %>
        <h2><%= project.name %></h2>
        <div class="project-description">
            <div class="image-placeholder">
                <img src="/images/<%= project.image %>" alt="<%= project.name %>">
            </div>
            <div class="text-content">
                <p><strong>Overview:</strong> <%= project.overview %></p>
                <p><strong>Key Features:</strong></p>
                <ul>
                    <% Object.entries(project.features).forEach(([key, value]) => { %>
                        <li><strong><%= key %>:</strong> <%= value %></li>
                    <% }) %>
                </ul>
                <p><strong>Technologies Used:</strong> <%= project.technologies %></p>
                <p><a class="project-link" href="<%= project.link %>">View Project</a></p>
                <% if (user) { %>
                    <!-- Show Edit and Delete buttons only to authenticated users -->
                    <form action="/projects/edit/<%= index %>" method="GET">
                      <button type="submit">Edit</button>
                    </form>
                    <form action="/projects/delete/<%= index %>" method="POST">
                      <button type="submit">Delete</button>
                    </form>
                  <% } %>
                </div>
              </div>
            <% }) %>
            
            <a href="/projects/new">Add New Project</a>
